                        <th>ราคาผลผลิต</th>
                        <th>หน่วยของผลผลิต</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    <% for(var i =0 ; i< list.length ; i ++ ){%>

                        <tr>
                            <td>
                                <%= i + 1  %>
                            </td>
                            <td>
                                <%= list[i].name %>
                            </td>
                            <td>
                                <%= list[i].price %>
                            </td>
                            <td>
                                <%= list[i].unit %>
                            </td>
                            <td><button onclick="deleteList('<%= list[i].id %>')" style="background-color: #f44336;color:white;">ลบ</button></td>
                        </tr>

                        <%} %>
                </tbody>
            </table>

