    </nav>

    <!-- !PAGE CONTENT! -->
    <div class="w3-main" style="margin-left:340px;margin-right:40px">

        <!-- Header -->
        <div class="w3-container" style="margin-top:80px" id="showcase">
            <h1 class="w3-jumbo" style="text-align: center;"><b>รายการเพาะปลูก</b></h1>

        </div>
        <div>

            <table>
                <thead>
                    <tr>
                        <th>รายการที่</th>
                        <th>ชื่อผลผลิต</th>
                        <th>จำนวนไร่</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <p>1</p>
                        </td>
                        <td>
                            <p>มะนาว</p>
